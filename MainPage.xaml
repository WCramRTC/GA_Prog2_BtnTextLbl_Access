<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GA_Prog2_BtnTextLbl_Access.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <!-- Label for Number 1 -->
            <Label Text="Number 1" 
                   AutomationProperties.HelpText="Label: for Number 1 Text Box"
                   />

            <!-- Entry for Number 1 -->
            <Entry x:Name="txtNumber1" 
                   AutomationProperties.HelpText="TextBox: This is where you enter your first number"
                   Placeholder="Enter Number 1" 
                   />

            <!-- Label for Number 2 -->
            <Label Text="Number 2" 
                   AutomationProperties.HelpText="Label: for Number 2 Text Box"               
                   />

            <!-- Entry for Number 2 -->
            <Entry x:Name="txtNumber2" 
                   AutomationProperties.HelpText="TextBox: This is where you enter your second number"
                   Placeholder="Enter Number 2" 
                   />

            <!-- Label for Result (Initial Text is Empty) -->
            <Label x:Name="lblResult" 
                   AutomationProperties.HelpText="Label: This is where you enter your second number"    
                   Text="" 
                   />

            <!-- Button to Perform Addition -->
            <Button x:Name="btnAdd" 
                   AutomationProperties.HelpText="Button: Click this to add your 2 numbers together"  
                   Text="Add" 
                   Clicked="btnAdd_Clicked" 
                    />

            <Button x:Name="btnSubtract"
                    AutomationProperties.HelpText="Button: Click this to perform subtraction with your 2 numbers"  
                   Text="Subtract" 
                    Clicked="btnSubtract_Clicked"
                    />

            <Button x:Name="btnMultiply"
                    AutomationProperties.HelpText="Button: Click this to multiply your 2 numbers together"  
                   Text="Multiply" 
                    Clicked="btnMultiply_Clicked"
                    />

            <Button x:Name="btnDivide"
                    AutomationProperties.HelpText="Button: Click this to perform division with your 2 numbers"  
                   Text="Divide" 
                    Clicked="btnDivide_Clicked"
                    />

            
            
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
